{
    "name": "laymance/url-shortener",
    "description": "A simple command line URL shortener using a flat-file database.",
    "type": "project",
    "authors": [
        {
            "name": "Rick Laymance",
            "email": "rick@laymance.com"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {"Shortener\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": { "Shortener\\Tests\\": "tests/" }
    },
    "scripts": {
        "post-install-cmd": [
            "phpunit"
        ]
    }
}
